<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <TextView
        android:id="@+id/venda_produto_alert_defineAtributs_textView_referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="EWH2342"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/venda_produto_alert_defineAtributs_textView_tamanho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textColor="@color/colorAccent"
        android:textSize="32dp"
        android:layout_alignBaseline="@+id/venda_produto_alert_defineAtributs_textView_referencia"
        android:layout_alignBottom="@+id/venda_produto_alert_defineAtributs_textView_referencia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/venda_produto_alert_defineAtributs_editText_quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venda_produto_alert_defineAtributs_textView_tamanho"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:background="@android:color/white"
        android:inputType="number"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/editText_text"
        android:textColorHint="@color/editText_hint"
        android:hint="@string/insertGrade_editText_hint_quantidade"
        android:textSize="28dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/venda_produto_alert_defineAtributs_textView_preco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="250,00"
        android:background="@color/textView_expo_background"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/venda_produto_define_atributs_textView_preco"
        android:textSize="16dp"
        android:textColor="@color/editText_text"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/venda_produto_alert_defineAtributs_editText_quantidade"
        android:layout_alignStart="@+id/venda_produto_alert_defineAtributs_editText_quantidade" />

    <TextView
        android:id="@+id/venda_produto_alert_defineAtributs_textView_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/venda_produto_alert_defineAtributs_editText_quantidade"
        android:layout_alignRight="@+id/venda_produto_alert_defineAtributs_editText_quantidade"
        android:layout_below="@+id/venda_produto_alert_defineAtributs_editText_quantidade"
        android:text="2"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/venda_produto_define_atributs_textView_maxValue"
        android:layout_alignBottom="@+id/venda_produto_alert_defineAtributs_textView_quantidade"
        android:layout_toLeftOf="@+id/venda_produto_alert_defineAtributs_textView_quantidade"
        android:layout_toStartOf="@+id/venda_produto_alert_defineAtributs_textView_quantidade"
        android:textSize="15dp"
        android:layout_marginRight="2dp"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venda_produto_alert_defineAtributs_textView_preco"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/linhadivisora" />

    <RadioGroup
        android:id="@+id/venda_produto_alert_defineAtributs_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        >

        <RadioButton
            android:id="@+id/venda_produto_alert_defineAtributs_radioButton_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_weight="1"
            android:buttonTint="@color/editText_text"
            android:checked="true"
            android:text="@string/cadProduto_alert_gerador_radioOpValor"
            android:textColor="@color/editText_text"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/venda_produto_alert_defineAtributs_radioButton_porcentagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/venda_produto_alert_defineAtributs_radioButton_valor"
            android:layout_weight="1"
            android:buttonTint="@color/editText_text"
            android:text="@string/cadProduto_alert_gerador_radioOpPorcent"
            android:textColor="@color/editText_text"
            android:textSize="18dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:text="@string/venda_produto_define_atributs_textView_titleGeradorDesconto"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/venda_produto_alert_defineAtributs_editText_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="@string/venda_produto_define_atributs_editText_hint_valor"
        android:inputType="numberDecimal"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/editText_text"
        android:textColorHint="@color/editText_hint"
        android:textSize="28dp"
        android:layout_above="@+id/imageView5"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/venda_produto_alert_defineAtributs_button_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_calcular"
        android:backgroundTint="@color/btn_background"
        android:textColor="@color/btn_text"
        android:layout_below="@+id/venda_produto_alert_defineAtributs_radioGroup"
        android:layout_alignRight="@+id/venda_produto_alert_defineAtributs_textView_preco"
        android:layout_alignEnd="@+id/venda_produto_alert_defineAtributs_textView_preco"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venda_produto_alert_defineAtributs_button_calcular"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/linhadivisora"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:text="@string/venda_produto_define_atributs_textView_precoReal"
        android:textSize="16dp"
        android:textColor="@color/editText_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/venda_produto_alert_defineAtributs_textView_precoReal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="250,00"
        android:background="@color/textView_expo_background"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venda_produto_alert_defineAtributs_textView_precoReal"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/linhadivisora"
        android:layout_marginTop="5dp"/>


</RelativeLayout>
