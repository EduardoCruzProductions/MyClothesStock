<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adapter_list_itens_venda_textView_precoReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adapter_list_itens_venda_textView_tamanho"
        android:layout_alignBottom="@+id/adapter_list_itens_venda_textView_tamanho"
        android:layout_alignEnd="@+id/adapter_list_itens_venda_textView_preco"
        android:layout_alignRight="@+id/adapter_list_itens_venda_textView_preco"
        android:text="450,00"
        android:textColor="@color/colorAccent"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/adapter_list_itens_venda_textView_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300,00"
        android:textColor="@color/editText_text"
        android:textSize="25dp"
        android:layout_below="@+id/adapter_list_itens_venda_textView_quantidade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/adapter_list_itens_venda_textView_tamanho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textColor="@color/colorAccent"
        android:textSize="55dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/adapter_list_itens_venda_textView_marca"
        android:layout_alignLeft="@+id/adapter_list_itens_venda_textView_marca"
        android:layout_alignStart="@+id/adapter_list_itens_venda_textView_marca" />

    <TextView
        android:id="@+id/adapter_list_itens_venda_textView_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Marca"
        android:textColor="@color/editText_text"
        android:textSize="20dp"
        android:layout_below="@+id/adapter_list_itens_venda_textView_referencia"
        android:layout_alignLeft="@+id/adapter_list_itens_venda_textView_referencia"
        android:layout_alignStart="@+id/adapter_list_itens_venda_textView_referencia" />

    <TextView
        android:id="@+id/adapter_list_itens_venda_textView_referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="1234983878"
        android:textColor="@color/editText_text"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/adapter_list_itens_venda_textView_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/adapter_list_itens_venda_textView_referencia"
        android:text="2"
        android:layout_marginRight="10dp"
        android:textSize="20dp"/>
</RelativeLayout>
