<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adapter_list_grade_textView_tamanho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="M"
        android:textSize="55dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/adapter_list_grade_textView_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/adapter_list_grade_textView_tamanho"
        android:layout_alignBottom="@+id/adapter_list_grade_textView_tamanho"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="1"
        android:textColor="@color/editText_text"
        android:textSize="35dp" />

</RelativeLayout>
