<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adapter_list_cliente_textView_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Nome cliente"
        android:textSize="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/adapter_list_cliente_textView_cpf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/adapter_list_cliente_textView_nome"
        android:layout_alignStart="@+id/adapter_list_cliente_textView_nome"
        android:layout_below="@+id/adapter_list_cliente_textView_nome"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="000.000.000-00"
        android:textColor="@color/editText_text"
        android:textSize="18dp" />

</RelativeLayout>
